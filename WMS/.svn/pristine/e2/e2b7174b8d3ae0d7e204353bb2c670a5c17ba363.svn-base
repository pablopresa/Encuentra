	//Devuelve un arreglo de strings para prefijos 
	public String[] auxIndices(int largo) {   
	    String[] resultado = new String[largo];
	    String colName = "";
	    for(int i = 0; i < largo; i++) {
	        char c = (char)('A' + (i % 26));
	        colName = c + "";
	        if(i > 25){
	            colName =  resultado[(i / 26) - 1] + "" + c;
	        }
	        resultado[i] = colName;
	    }
	    return resultado;
	}
	
